<section id="page-contact">  
  <%= form_for @message do |f| %>
    <div class="fieldcontain">
      <%= f.label :Unternehmen %>
      <%= f.text_field :company_name %>
    </div>
    <div class="fieldcontain">
      <%= f.label :Ansprechpartner %>
      <%= f.text_field :name %>
    </div>
    <div class="fieldcontain">
      <%= f.label :Emailadresse %>
      <%= f.text_field :email %>
    </div>
    <div class="fieldcontain">
      <%= f.label :Telefonnummer %>
      <%= f.text_field :phone %>
    </div>
    <div class="fieldcontain" id="text_message">
      <%= f.label :Nachricht %>
      <%= f.text_area :message %>
    </div>
    <div class="actions" id="submit"><%= f.submit "Nachricht senden" %></div>
  <% end %>
</section>